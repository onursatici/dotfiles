# Unix
alias ln='ln -v'
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'


# git
alias gs='git status -sb'
alias gdiff='git difftool $(git rev-parse HEAD~1) $(git rev-parse HEAD)'

# Bundler
alias b="bundle"
alias bi="bundle install"
alias be="bundle exec"
alias kbundle="bundle"


#matlab
alias matlabs="/Applications/MATLAB_R2014b.app/bin/matlab -nojvm -nodisplay -nosplash"
alias matlab="/Applications/MATLAB_R2014b.app/bin/matlab  -nodisplay -nosplash"

#custom
alias til="cd ~/Documents/workspace/learning/til"
alias dev="/usr/local/dev-env/bin/dev"

# colourizer
GRC=`which grc`
if [ "$TERM" != dumb ] && [ -n "$GRC" ]
then
    alias colourify="$GRC -es --colour=auto"
    alias configure='colourify ./configure'
    alias diff='colourify diff'
    alias make='colourify make'
    alias gcc='colourify gcc'
    alias g++='colourify g++'
    alias as='colourify as'
    alias gas='colourify gas'
    alias ld='colourify ld'
    alias netstat='colourify netstat'
    alias ping='colourify ping'
    alias traceroute='colourify /usr/sbin/traceroute'
    alias head='colourify head'
    alias tail='colourify tail'
    alias dig='colourify dig'
    alias mount='colourify mount'
    alias ps='colourify ps'
    alias mtr='colourify mtr'
    alias df='colourify df'
fi

#quicklook alias
alias ql="qlmanage -p 2>/dev/null"

#today's date helper
alias -g today=$(echo `date +%Y%m%d`.md)

# ctags
alias tags="ctags -R --exclude=build --exclude=.git --exclude=node_modules --exclude=vendor"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

alias googler="googler --colors 'GEfgxj'"

